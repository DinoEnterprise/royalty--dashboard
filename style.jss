body {
    font-family: Arial;
    background: #111;
    color: white;
    text-align: center;
}

.box {
    margin-top: 150px;
}

input {
    width: 80%;
    padding: 12px;
    margin-bottom: 10px;
    border-radius: 8px;
    border: none;
    font-size: 16px;
}

button {
    width: 85%;
    padding: 12px;
    border: none;
    border-radius: 8px;
    background: purple;
    color: white;
    font-weight: bold;
    font-size: 16px;
}
